<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Playlist_maker" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- status bar color -->
        <item name="android:statusBarColor">@color/blue</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Customize light theme -->
        <item name="background">@color/blue</item>
        <!--  brand colors -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorSecondary">@color/white</item>
        <!-- light and dark shades of colors-->
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSwitchThumbNormal">@color/light_gray</item>
        <item name="colorControlActivated">@color/gray</item>

        <!-- element colors -->
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="materialSearchBarStyle">@color/light_gray</item>

    </style>

    <style name="Theme.Playlist_maker" parent="Base.Theme.Playlist_maker" />
</resources>