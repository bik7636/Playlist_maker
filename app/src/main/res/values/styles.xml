<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TitleTextStyle">
        <item name="android:textSize">22sp</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="MainScreenButtonsStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="iconTint">?attr/colorOnPrimary</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/padding_icon_size</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:background">@drawable/rounded_button</item>

    </style>

    <style name="BackArrowButton">
        <item name="iconTint">?attr/colorOnSecondary</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:padding">0dp</item>
        <item name="android:scaleType">centerCrop</item>

    </style>
    
    <style name="DarkThemeSwitch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:thumbTint">?attr/colorControlActivated</item>
        <item name="android:trackTint">?attr/colorSwitchThumbNormal</item>
        <item name="android:checked">false</item>


    </style>
    
    <style name="SettingsTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/second_screen_text_size</item>

    </style>
</resources>