<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DarkThemeSwitch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:thumbTint">?attr/colorControlActivated</item>
        <item name="android:trackTint">?attr/colorSwitchThumbNormal</item>
        <item name="android:checked">true</item>
    </style>

    <style name="SearchBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">@dimen/second_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:hint">@string/text_search</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:lines">1</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLength">30</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:drawableStart">@drawable/ic_search_black</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:background">@drawable/rounded_input_search</item>
    </style>

    <style name="BackArrowButton">
        <item name="iconTint">?attr/colorOnSecondary</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:padding">0dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:src">@drawable/ic_arrow_back_white</item>

    </style>

</resources>